<Window x:Class="FigmaToWpf.AddCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Command"
        Height="300" Width="400"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent">
    <Grid Background="#1D192B">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="1">
            <Button Content="✖️" Width="20" Height="20" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Click="Close_Click"/>
        </StackPanel>
        <StackPanel Margin="10">
            <TextBlock Text="Command Name:" Foreground="White"/>
            <TextBox x:Name="CommandNameTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Description:" Foreground="White" Margin="0,10,0,0"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Actions:" Foreground="White" Margin="0,10,0,0"/>
            <ItemsControl x:Name="ActionsItemsControl" Margin="0,0,0,10" />
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Голосовой ответ" Click="VoiceResponseButton_Click" Background="#6A4E86" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Открыть ссылку" Click="OpenLinkButton_Click" Background="#6A4E86" Foreground="White"/>
            </StackPanel>
            <Button Content="Add" Click="AddButton_Click" Background="#6A4E86" Foreground="White" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
