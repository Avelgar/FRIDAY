<Window x:Class="FigmaToWpf.AddCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Command"
        Height="300" Width="400"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent">
    <Grid Background="#1D192B">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="1">
            <Button Content="✖️" Width="20" Height="20" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Click="Close_Click"/>
        </StackPanel>
        <StackPanel Margin="10">
            <TextBlock Text="Command Name:" Foreground="White"/>
            <TextBox x:Name="CommandNameTextBox" Margin="0,0,0,10" PreviewTextInput="CommandNameTextBox_PreviewTextInput"/>
            <TextBlock Text="Description:" Foreground="White" Margin="0,10,0,0"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Actions:" Foreground="White" Margin="0,10,0,0"/>
            <ItemsControl x:Name="ActionsItemsControl" Margin="0,0,0,10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}" Foreground="White" Margin="5"/>
                            <Button Content="Редактировать" Click="EditButton_Click" Margin="5" />
                            <Button Content="Удалить" Click="DeleteButton_Click" Margin="5" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <CheckBox x:Name="SetPasswordCheckBox" Content="Установить пароль" Foreground="White" Margin="0,10,0,0"/>

            <Button Content="Добавить действие" Click="AddActionButton_Click" Background="#6A4E86" Foreground="White" Margin="0,10,0,0"/>
            <Button Content="Добавить команду" Click="AddButton_Click" Background="#6A4E86" Foreground="White" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
