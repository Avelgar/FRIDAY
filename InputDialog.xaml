<Window x:Class="FigmaToWpf.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите данные" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Выберите действие:"/>
            <ComboBox x:Name="ActionTypeComboBox" SelectionChanged="ActionTypeComboBox_SelectionChanged" Margin="0,0,0,10">
                <ComboBoxItem Content="Запуск приложения"/>
                <ComboBoxItem Content="Закрытие приложения"/>
                <ComboBoxItem Content="Копирование файла"/>
                <ComboBoxItem Content="Перемещение файла"/>
                <ComboBoxItem Content="Удаление файла"/>
                <ComboBoxItem Content="Создание папки"/>
                <ComboBoxItem Content="Изменение настроек экрана"/>
                <ComboBoxItem Content="Изменение громкости"/>
                <ComboBoxItem Content="Получение информации о процессах"/>
                <ComboBoxItem Content="Управление сетевыми подключениями"/>
                <ComboBoxItem Content="Запуск/остановка службы"/>
                <ComboBoxItem Content="Работа с реестром"/>
                <ComboBoxItem Content="Создание уведомления"/>
                <ComboBoxItem Content="Голосовой ответ"/>
            </ComboBox>

            <Label Content="Введите данные:"/>
            <TextBox x:Name="InputTextBox" Margin="0,0,0,10" />
            <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
