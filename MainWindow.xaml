<Window x:Class="Friday.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Friday"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="outputTextBox" VerticalAlignment="Top" Height="200" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" />
        <Button Name="startButton" Content="Начать слушать" VerticalAlignment="Bottom" Margin="10" Click="startButton_Click"/>
    </Grid>
</Window>
