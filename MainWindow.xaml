<Window x:Class="FigmaToWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Window" 
        Height="500" Width="800"
        WindowStyle="None"
        Background="#4A4459">

    <Window.Resources>
        <FontFamily x:Key="IntroFridayFont">pack://FRIDAY/src/IntroFriday.ttf</FontFamily>
    </Window.Resources>

    <Grid>
        <!-- Хедер -->
        <Border Background="#1D192B" Height="40" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопки управления -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <Button Content="−" Width="20" Foreground="White" Background="#1D192B" Click="Minimize_Click"/>
                    <Button Content="⬜" Width="20" Foreground="White" Background="#1D192B" FontWeight="Bold" Click="Maximize_Click"/>
                    <Button Content="✖" Width="20" Foreground="White" Background="#1D192B" FontWeight="Bold" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Логотип "FRIDAY" -->
        <TextBlock Text="FRIDAY" FontFamily="{StaticResource IntroFridayFont}" 
                   FontSize="100" FontWeight="Bold" Foreground="White"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="10,60,0,0"/>

        <!-- Консольное окно -->
        <TextBox x:Name="ConsoleTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="360,160,10,10" Height="200" FontSize="16" Background="#2D2A39" Foreground="White"
                 IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <!-- Кнопка для включения/выключения прослушивания -->
        <Button Content="⬜" x:Name="ListenButton" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="360,0,0,69" Width="50" Height="50" Background="#6A4E86" Foreground="White" FontSize="16" 
                Click="ListenButton_Click"/>
    </Grid>
</Window>
