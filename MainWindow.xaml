<Window x:Class="FigmaToWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Window"
        Height="600" Width="1000"
        WindowStyle="None"
        Background="#302B3D"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <FontFamily x:Key="IntroFridayFont">pack://FRIDAY//Assets//IntroFriday.ttf</FontFamily>
 

        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="ComboBoxButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="ClickMode" Value="Press"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="templateRoot" Background="#625B71" BorderBrush="{x:Null}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" SnapsToDevicePixels="true">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" />
                                <Path x:Name="arrow" Data="F1 M 0,0 L 2.667,2.66665 L 5.3334,0 L 5.3334,-1.78168 L 2.6667,0.88501 L0,-1.78168 L0,0 Z" Fill="White" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Opacity" TargetName="templateRoot" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Opacity" TargetName="templateRoot" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" TargetName="templateRoot" Value="0.5"/>
                                <Setter Property="Fill" TargetName="arrow" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="CustomComboBoxTemplate" TargetType="{x:Type ComboBox}">
            <Grid x:Name="templateRoot" SnapsToDevicePixels="true">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Popup x:Name="PART_Popup" AllowsTransparency="true" Grid.ColumnSpan="2" IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" Placement="Bottom" PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">
                    <Border x:Name="dropDownBorder" Background="#625B71" BorderBrush="{x:Null}" BorderThickness="0" CornerRadius="5">
                        <ScrollViewer>
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </Popup>

                <ToggleButton x:Name="toggleButton" Background="#625B71" BorderBrush="{x:Null}" BorderThickness="0" Grid.ColumnSpan="2" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" Style="{StaticResource ComboBoxButtonStyle}" Foreground="White"/>

                <ContentPresenter x:Name="contentPresenter" ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" Content="{TemplateBinding SelectionBoxItem}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" IsHitTestVisible="false" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Grid>
        </ControlTemplate>

        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="#625B71"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template" Value="{StaticResource CustomComboBoxTemplate}"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="#625B71"/>
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>







        <Style TargetType="Button">
            <Setter Property="Background" Value="#625B71"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7B728A"/>
                                <!-- Немного более светлый фиолетовый -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#554E62"/>
                                <!-- Еще более темный фиолетовый -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A4459"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF453C53"/>
                                <!-- Немного более светлый оттенок -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D3849"/>
                                <!-- Еще более темный оттенок -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#625B71"/>
            <Setter Property="BorderBrush" Value="#625B71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#625B71"/>
            <Setter Property="BorderBrush" Value="#4A4459"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" Margin="15,4,-5,-1" CornerRadius="5,5,0,0">
                            <Grid>
                                <Rectangle x:Name="interactive" Opacity="0.3"/>
                                <ContentPresenter HorizontalAlignment="Center" Margin="12,2,12,2" x:Name="ContentSite" VerticalAlignment="Center" RecognizesAccessKey="True" ContentSource="Header" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="100"/>
                                <Setter Property="Background" Value="#4A4459" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Selector.IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Fill" Value="#4A4459" TargetName="interactive"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" TargetName="interactive" />
                                <Setter Property="Fill" Value="#4A4459" TargetName="interactive" />
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="DarkGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="#4A4459"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0" IsItemsHost="True" Panel.ZIndex="1" KeyboardNavigation.TabIndex="1"/>
                            <Border Padding="12" Background="{TemplateBinding Background}"
                                    Grid.Row="1" KeyboardNavigation.DirectionalNavigation="Contained" KeyboardNavigation.TabNavigation="Local" KeyboardNavigation.TabIndex="2">
                                <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,120,0">
            <Button x:Name="LoginButton" Content="Вход" Width="80" Margin="0,0,5,0" Click="LoginButton_Click" 
                Style="{StaticResource DarkButtonStyle}" Visibility="Collapsed"/>
            <Button x:Name="RegisterButton" Content="Регистрация" Width="100" 
                Style="{StaticResource DarkButtonStyle}" Click="RegisterButton_Click" Visibility="Collapsed"/>
            <Button x:Name="UserButton" Width="120" Style="{StaticResource DarkButtonStyle}" 
                Click="UserButton_Click" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Assets/user-icon.png" Width="5" Height="16" Margin="0,0,0,0"/>
                    <TextBlock x:Name="UserButtonText" Text="Пользователь"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="7">
            <Button Content="−" Width="20" Height="20" VerticalAlignment="Top" Foreground="White" Click="Minimize_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Button Content="⬜️" Width="20" Height="20" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Click="Maximize_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Button Content="✖️" Width="20" Height="20" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Click="Close_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
        </StackPanel>


        <TabControl Margin="0"  SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Home">
                <StackPanel Width="970" Height="744">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Width="950" Margin="10,0,0,0" Height="133">
                        <TextBlock Text="FRIDAY" FontSize="120" Foreground="White" 
                   HorizontalAlignment="Left" FontWeight="Bold" FontFamily="Intro Friday" TextWrapping="Wrap"/>
                        <Button x:Name="ListenButton" Width="50" Height="50" BorderBrush="{x:Null}" 
        FontSize="20" Click="ListenButton_Click" HorizontalAlignment="Right" 
        VerticalAlignment="Center" Content="🎤" FontFamily="Segoe UI Emoji">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="40" Color="#FF6B3B79" Direction="1" 
                          Opacity="0.5" RenderingBias="Performance" ShadowDepth="0"/>
                            </Button.Effect>
                        </Button>
                        <ComboBox x:Name="InputModeComboBox" Width="150" Height="30" Margin="10,0,0,0" VerticalAlignment="Center"
              SelectedIndex="0">
                            <ComboBoxItem Content="Имя-ответ-команда"/>
                            <ComboBoxItem Content="Имя + команда"/>
                            <ComboBoxItem Content="Разговорный режим"/>
                        </ComboBox>
                        <!-- Добавляем новую кнопку здесь -->
                        <Button Content="Очистить историю" x:Name="ClearHistoryButton" Width="140" Height="50" Margin="10,0,0,0"
                 Click="ClearHistoryButton_Click" VerticalAlignment="Center">
                        
                        </Button>
                        <ToggleButton x:Name="ScreenshotButton" Content="Скриншот" Width="120" Height="50" Margin="10,0,0,0"
              Click="ScreenshotButton_Click" VerticalAlignment="Center">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Background" Value="#625B71"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- Обычное состояние -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#7B728A"/>
                                                    </Trigger>

                                                    <!-- Активированное состояние -->
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter Property="Background" Value="#6A3D8B"/>
                                                        <Setter Property="BorderBrush" Value="#9B59B6"/>
                                                    </Trigger>

                                                    <!-- Активированное + наведение -->
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsChecked" Value="True"/>
                                                            <Condition Property="IsMouseOver" Value="True"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter Property="Background" Value="#8E44AD"/>
                                                        <Setter Property="BorderBrush" Value="#BF8FDE"/>
                                                    </MultiTrigger>

                                                    <!-- Нажатие -->
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#554E62"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </StackPanel>

                    <TextBox x:Name="ConsoleTextBox" Height="250" FontSize="16" Background="White" Foreground="White"
                  IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" 
                  Visibility="Visible" Width="744" HorizontalScrollBarVisibility="Disabled"/>
                    <StackPanel Orientation="Horizontal" Margin="80,10,0,0">
                        <Button x:Name="AttachFileButton" Content="📎" Width="30" Height="25" VerticalAlignment="Center"
            Click="AttachFileButton_Click" ToolTip="Прикрепить файл"/>
                        <TextBox x:Name="MessageTextBox" Width="750" Height="25" VerticalAlignment="Center" 
             Background="#625B71" Foreground="White" BorderBrush="#625B71"
             KeyDown="MessageTextBox_KeyDown"/>
                        <Button x:Name="SendMessageButton" Content="Отправить" Width="80" Height="25" Margin="10,0,0,0" 
            Click="SendMessageButton_Click" />
                    </StackPanel>
                    <ItemsControl x:Name="ThumbnailContainer" Margin="80,5,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    <TextBlock x:Name="AttachedFileInfoTextBlock" Margin="80,5,0,0" Foreground="LightGray" TextWrapping="Wrap"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Команды">
                <StackPanel Width="700" Height="auto">
                    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
                        <Button Content="Добавить команду" Margin="0,0,5,0" Click="AddCommandButton_Click" Padding="10,5,10,5" BorderThickness="0,0,0,0" Width="135" Height="31" />
                        <TextBox x:Name="SearchTextBox" Width="300" Background="#FF625B71" Height="31" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                        <ComboBox x:Name="ActionTypeComboBox" Width="135" Margin="5,0,0,0" SelectionChanged="ActionTypeComboBox_SelectionChanged" Text="Фильтр" Foreground="White">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="White" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <ScrollViewer Margin="0,10" Height="300" VerticalScrollBarVisibility="Auto">
                        <!-- Полоса прокрутки будет отображаться только при необходимости -->
                        <ItemsControl x:Name="CommandsItemsControl" Margin="10" ItemsSource="{Binding Commands}" Width="auto">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{x:Null}" BorderThickness="1" CornerRadius="5" Margin="0,5,0,0" Background="#625B71">
                                        <StackPanel Margin="10">
                                            <TextBlock x:Name="NameTextBlock" Text="{Binding Name}" Foreground="White" FontWeight="Bold" />
                                            <TextBlock Text="{Binding Description}" Foreground="LightGray" />
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Style="{StaticResource DarkButtonStyle}" Content="Изменить" Click="EditCommandButton_Click"  Height="25" Width="80"/>
                                                <Button Style="{StaticResource DarkButtonStyle}" Content="Удалить" Margin="5,0" Click="DeleteCommandButton_Click"  Height="25" Width="65"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>


            <TabItem Header="Настройки">
                <StackPanel>
                    <TextBlock Text="Настройки" Foreground="White" FontSize="24" />
                    <StackPanel Margin="0,15,0,10" >
                        <TextBlock Text="Имя помощника:" Margin="0,0,0,5"/>
                        <TextBox x:Name="FridayNameTextBox" Height="24" Margin="0,3,0,5"/>
                        <TextBlock Text="Пароль:" Margin="0,5,0,5"/>
                        <TextBox x:Name="PasswordTextBox" Height="24" Margin="0,3,0,5"/>
                        <TextBlock Text="Озвучка:" Margin="0,5,0,5"/>
                        <ComboBox x:Name="VoiceTypeComboBox" Margin="0,3,0,10"  Height="23">
                            <ComboBoxItem Content="Irina"/>
                            <ComboBoxItem Content="Anna"/>
                            <ComboBoxItem Content="Elena"/>
                            <ComboBoxItem Content="Aleksandr"/>
                        </ComboBox>
                        <TextBlock Text="Громкость:" Margin="0,5,0,10"/>
                        <Slider x:Name="VolumeSlider" Minimum="0" Maximum="10" SmallChange="1" />
                        <Button Content="Сохранить" Margin="0,20,5,0" Padding="10,5,10,5" BorderThickness="0,0,0,0" Width="85" Height="23" HorizontalAlignment="Left" Click="Save_Button_Click" />

                        <Button Content="Изменить данные" Margin="0,25,5,0" Padding="10,5,10,5" BorderThickness="0,0,0,0" Width="150" Height="30" HorizontalAlignment="Left" Click="ChangedataButton_Click"/>
                    </StackPanel>

                </StackPanel>

            </TabItem>
            <TabItem x:Name="DevicesTab" Header="Устройства">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="ConnectDeviceButton" Content="Подключить новое устройство" Width="210" Height="25"
                Click="ConnectDeviceButton_Click" HorizontalAlignment="Left" Margin="0,0,0,10"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Первая колонка - Устройства аккаунта -->
                        <Border Grid.Column="0" Background="#4A4459" CornerRadius="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Устройства аккаунта" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                                <ItemsControl x:Name="AccountDevicesList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#625B71" CornerRadius="5" Margin="0,0,0,5" Padding="10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding DeviceName}" Foreground="White" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding MacAddress}" Foreground="LightGray"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="Оффлайн"/>
                                                                <Setter Property="Foreground" Value="LightGray"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                        <Setter Property="Text" Value="Онлайн"/>
                                                                        <Setter Property="Foreground" Value="LightGreen"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock x:Name="NoAccountDevicesText" Text="У данного аккаунта нет устройств" 
                               Foreground="LightGray" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>

                        <!-- Вторая колонка - Подключенные устройства -->
                        <Border Grid.Column="2" Background="#4A4459" CornerRadius="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Подключенные устройства" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                                <ItemsControl x:Name="ConnectedDevicesList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#625B71" CornerRadius="5" Margin="0,0,0,5" Padding="10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding DeviceName}" Foreground="White" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding MacAddress}" Foreground="LightGray"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="Оффлайн"/>
                                                                <Setter Property="Foreground" Value="LightGray"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                        <Setter Property="Text" Value="Онлайн"/>
                                                                        <Setter Property="Foreground" Value="LightGreen"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <Button Grid.Column="2" Content="Отключить" Style="{StaticResource DarkButtonStyle}"  Width="100" Height="25"
                                                Click="DisconnectDeviceButton_Click" Tag="{Binding MacAddress}"
                                                Padding="5,2" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock x:Name="NoConnectedDevicesText" Text="У вас нет подключенных устройств" 
                               Foreground="LightGray" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>