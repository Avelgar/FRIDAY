<Window x:Class="FigmaToWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Window"
        Height="500" Width="800"
        WindowStyle="None"
        Background="#1D192B">

	<Window.Resources>
		<FontFamily x:Key="IntroFridayFont">pack://FRIDAY//src//IntroFriday.ttf</FontFamily>

		<Style TargetType="{x:Type TabItem}">
			<Setter Property="OverridesDefaultStyle" Value="True"/>
			<Setter Property="SnapsToDevicePixels" Value="True"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="Background" Value="#625B71"/>
			<Setter Property="BorderBrush" Value="#4A4459"/>
			<Setter Property="Height" Value="32"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type TabItem}">
						<Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" Margin="15,4,-5,-1" CornerRadius="5,5,0,0">
							<Grid>
								<Rectangle x:Name="interactive" Opacity="0.3"/>
								<ContentPresenter HorizontalAlignment="Center" Margin="12,2,12,2" x:Name="ContentSite" VerticalAlignment="Center" RecognizesAccessKey="True" ContentSource="Header" />
							</Grid>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsSelected" Value="True">
								<Setter Property="Panel.ZIndex" Value="100"/>
								<Setter Property="Background" Value="#4A4459" />
							</Trigger>
							<MultiTrigger>
								<MultiTrigger.Conditions>
									<Condition Property="IsMouseOver" Value="True"/>
									<Condition Property="Selector.IsSelected" Value="False"/>
								</MultiTrigger.Conditions>
								<Setter Property="Fill" Value="#4A4459" TargetName="interactive"/>
							</MultiTrigger>
							<Trigger Property="IsEnabled" Value="False">
								<Setter Property="Opacity" Value="0.5" TargetName="interactive" />
								<Setter Property="Fill" Value="#4A4459" TargetName="interactive" />
								<Setter Property="Background" Value="White"/>
								<Setter Property="Foreground" Value="DarkGray"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style TargetType="{x:Type TabControl}">
			<Setter Property="Background" Value="#4A4459"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type TabControl}">
						<Grid KeyboardNavigation.TabNavigation="Local">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<TabPanel Grid.Row="0" IsItemsHost="True" Panel.ZIndex="1" KeyboardNavigation.TabIndex="1"/>
							<Border Padding="12" Background="{TemplateBinding Background}"
                                    Grid.Row="1" KeyboardNavigation.DirectionalNavigation="Contained" KeyboardNavigation.TabNavigation="Local" KeyboardNavigation.TabIndex="2">
								<ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
							</Border>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="1">
			<Button Content="−" Width="20" Height="20" VerticalAlignment="Top" Foreground="White" Click="Minimize_Click"/>
			<Button Content="⬜️" Width="20" Height="20" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Click="Maximize_Click"/>
			<Button Content="✖️" Width="20" Height="20" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Click="Close_Click"/>
		</StackPanel>

		<TabControl Margin="10">
			<TabItem Header="Home">
				<StackPanel Width="755" Height="424">

					<TextBlock Text="FRIDAY" FontFamily="{StaticResource IntroFridayFont}"
                               FontSize="100" FontWeight="Bold" Foreground="White"/>
					<TextBox x:Name="ConsoleTextBox" Height="142" FontSize="16" Background="White" Foreground="Black"
                             IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             Visibility="Visible" Width="325"/>
					<Button Content="⬜️" x:Name="ListenButton" Width="150" Height="50" Background="#6A4E86" Foreground="White" FontSize="16"
                            Click="ListenButton_Click"/>
				</StackPanel>
			</TabItem>

			<TabItem Header="Commands">
				<StackPanel>
					<StackPanel Orientation="Horizontal" Margin="10">
						<Button Content="Add command" Margin="0,0,10,0" Click="AddCommandButton_Click" />
						<TextBox Width="200" Text="Search" />
						<Button Content="Sort and filter" Margin="10,0,0,0" />
					</StackPanel>
					<ItemsControl Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5,0,0" Background="#3E3E4B">
                                    <StackPanel Margin="10">
                                        <TextBlock Text="Command name" Foreground="White" FontWeight="Bold" />
                                        <TextBlock Text="Command description command description command description" Foreground="LightGray" />
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Edit" Margin="5,0" />
                                            <Button Content="Delete" Margin="5,0" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl x:Name="CommandsItemsControl" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Здесь будет ваш шаблон для отображения команд -->
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ItemsControl>
				</StackPanel>
			</TabItem>

			<TabItem Header="Settings">
				<StackPanel>
					<TextBlock Text="Settings Page" Foreground="White" FontSize="24" />
				</StackPanel>
			</TabItem>
		</TabControl>
	</Grid>
</Window>