<Window x:Class="FigmaToWpf.AddCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Command"
        Height="500" Width="900"
        WindowStyle="None"
        Background="Transparent" AllowsTransparency="True">
    <Window.Resources>
        <FontFamily x:Key="IntroFridayFont">pack://FRIDAY//Assets//IntroFriday.ttf</FontFamily>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Intro Friday"/>
            <Setter Property="FontWeight" Value="Light"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#3E3E4B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A4459"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Intro Friday"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#625B71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Intro Friday"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Intro Friday"/>
            <Setter Property="FontWeight" Value="Light"/>
        </Style>
    </Window.Resources>


    <Border CornerRadius="15" Background="#302B3D">
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom">
                <Button Content="✓" Width="30" Height="30" Margin="3" Click="AddButton_Click"/>
                <Button Content="✖️" Width="30" Height="30" Margin="3" Click="Close_Click"/>
            </StackPanel>

            <Grid Margin="35,20,35,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Первая колонка -->
                <StackPanel Grid.Column="0" Margin="0,0,50,0">
                    <TextBlock Text="Изменить команду" Margin="0,0,0,10" FontSize="30" FontWeight="Bold" FontFamily="Intro Friday" />
                    <TextBlock Text="Имя команды:"/>
                    <TextBox x:Name="CommandNameTextBox" PreviewTextInput="CommandNameTextBox_PreviewTextInput"/>

                    <TextBlock Text="Описание команды:" Margin="0,10,0,0"/>
                    <TextBox x:Name="DescriptionTextBox" />

                    <CheckBox x:Name="SetPasswordCheckBox" Content="Установить пароль" Margin="0,10,0,0" IsChecked="False" BorderBrush="#FF625B71" Background="#FF302B3D" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Вторая колонка -->
                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                    <TextBlock Text="Действия:" Margin="0,10,0,0"/>
                    <Button Content="Добавить действие" Click="AddActionButton_Click" Height="26"/>
                    <ItemsControl x:Name="ActionsItemsControl" Margin="0,0,0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" Margin="5"/>
                                    <Button Content="Редактировать" Click="EditButton_Click" Margin="5" />
                                    <Button Content="Удалить" Click="DeleteButton_Click" Margin="5" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
