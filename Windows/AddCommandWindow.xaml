<Window x:Class="FigmaToWpf.AddCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Command"
        Height="400" Width="900"
        WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <FontFamily x:Key="IntroFridayFont">pack://FRIDAY//Assets//IntroFriday.ttf</FontFamily>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#625B71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#625B71"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#625B71"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7B728A"/>
                                <!-- Немного более светлый фиолетовый -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#554E62"/>
                                <!-- Еще более темный фиолетовый -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A4459"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF453C53"/>
                                <!-- Немного более светлый оттенок -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D3849"/>
                                <!-- Еще более темный оттенок -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>


    <Border CornerRadius="15" Background="#4A4459" Margin="30">
        <Border.Effect>
            <DropShadowEffect Color="#1D192B" Direction="-0.2" BlurRadius="28" ShadowDepth="0" Opacity="0.99" RenderingBias="Performance"/>
        </Border.Effect>
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom">
                <Button Content="✓" Width="30" Height="30" Margin="3" Click="AddButton_Click"/>
                <Button Content="✖️" Width="30" Height="30" Margin="3" Click="Close_Click"/>
            </StackPanel>

            <Grid Margin="35,20,35,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Первая колонка -->
                <StackPanel Grid.Column="0" Margin="0,0,50,0">
                    <TextBlock Text="Изменить команду" Margin="0,0,0,10" FontSize="30" FontWeight="ExtraBold" FontFamily="Century Gothic" />
                    <TextBlock Text="Имя команды:"/>
                    <TextBox x:Name="CommandNameTextBox" PreviewTextInput="CommandNameTextBox_PreviewTextInput"/>

                    <TextBlock Text="Описание команды:" Margin="0,10,0,0"/>
                    <TextBox x:Name="DescriptionTextBox" />

                    <CheckBox x:Name="SetPasswordCheckBox" Content="Установить пароль" Margin="0,10,0,0" IsChecked="False" BorderBrush="#625B71" Background="#625B71" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Вторая колонка -->
                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                    <TextBlock Text="Действия:" Margin="0,10,0,10"/>
                    <Button Content="Добавить действие" Click="AddActionButton_Click" Height="26"/>
                    <ItemsControl x:Name="ActionsItemsControl" Margin="0,0,0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="5" Margin="0,5,0,0" Background="#625B71">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="auto">

                                        
                                            <TextBlock Text="{Binding}" Foreground="White" Margin="5"/>




                                        <Button Style="{StaticResource DarkButtonStyle}" Content="✎" Click="EditButton_Click" Height="25" Width="25" Margin="2" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                                        <Button Style="{StaticResource DarkButtonStyle}" Content="🗑" Click="DeleteButton_Click" Height="25" Width="25" Margin="2" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                                    
                                        
                                    </StackPanel>
                                </Border>
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
