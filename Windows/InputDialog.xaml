<Window x:Class="FigmaToWpf.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите данные" Height="300" Width="400"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>

       
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#4A4459"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A4459"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#4A4459"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border CornerRadius="7"  Background="#625B71">
        <Grid>
            <StackPanel Margin="10">
                <TextBlock Text="Выберите действие:"/>
                <ComboBox x:Name="ActionTypeComboBox" SelectionChanged="ActionTypeComboBox_SelectionChanged" Margin="0,0,0,10" Background="#FF4A4459" BorderBrush="#FF4A4459" Foreground="Black">
                    <ComboBoxItem Content="Запуск приложения"/>
                    <ComboBoxItem Content="Закрытие приложения"/>
                    <ComboBoxItem Content="Копирование файла"/>
                    <ComboBoxItem Content="Перемещение файла"/>
                    <ComboBoxItem Content="Удаление файла"/>
                    <ComboBoxItem Content="Создание папки"/>
                    <ComboBoxItem Content="Изменение настроек экрана"/>
                    <ComboBoxItem Content="Изменение громкости"/>
                    <ComboBoxItem Content="Получение информации о процессах"/>
                    <ComboBoxItem Content="Управление сетевыми подключениями"/>
                    <ComboBoxItem Content="Запуск/остановка службы"/>
                    <ComboBoxItem Content="Работа с реестром"/>
                    <ComboBoxItem Content="Создание уведомления"/>
                    <ComboBoxItem Content="Голосовой ответ"/>
                </ComboBox>

                <TextBlock Text="Введите данные:"/>
                <TextBox x:Name="InputTextBox" Margin="0,0,0,5" Height="154" />
                <Button Content="OK" HorizontalAlignment="Right" Margin="10,5,10,5" Click="OkButton_Click" Width="29" Height="22"/>
            </StackPanel>
        </Grid>
    </Border>
    
</Window>
